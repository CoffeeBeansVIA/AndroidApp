<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="214dp"
        android:layout_height="30dp"

        android:layout_marginTop="5sp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/value_measurment_item_textfield"
            android:layout_width="75dp"
            android:layout_height="29dp"
            android:text="@string/text_value_measurmentItem"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.083" />

        <TextView
            android:id="@+id/measured_at_measurement_item_textfield"
            android:layout_width="139dp"
            android:layout_height="30dp"
            android:text="@string/measured_at"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/value_measurment_item_textfield"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>